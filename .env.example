# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# KicksDB API Configuration
KICKSDB_API_KEY=your_kicksdb_api_key_here
KICKSDB_BASE_URL=https://api.kicksdb.com
KICKSDB_WEBHOOK_SECRET=your_webhook_secret_key

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com
# Alternative: for local development
# WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Sync Configuration (Optional - defaults will be used if not provided)
SYNC_FULL_INTERVAL_HOURS=24
SYNC_INCREMENTAL_INTERVAL_MINUTES=60
SYNC_MAX_PRODUCTS_PER_SYNC=1000
SYNC_BATCH_SIZE=50
SYNC_CONCURRENT_REQUESTS=5
SYNC_IMAGE_LIMIT_PER_PRODUCT=2

# Monitor Feature Flags (optional - will use defaults if not set)
FEATURE_MONITOR_UPDATES_STOCK=false
MONITOR_PRICE_UPDATE_ENABLED=true
MONITOR_STOCK_UPDATE_ENABLED=false
MONITOR_NEW_PRODUCT_ENABLED=true
WEBHOOK_RATE_LIMIT_PER_MINUTE=100
WEBHOOK_SIGNATURE_REQUIRED=true
STOCK_RESERVATION_TTL_MINUTES=15
AUDIT_LOG_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=30

# Environment
NODE_ENV=development